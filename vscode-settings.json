{
    "git.ignoreLegacyWarning": true,
    "window.zoomLevel": 1,
    "editor.lineHeight": 20,
    "editor.fontSize": 14,
    "editor.fontFamily": "Fira Code Medium",
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
