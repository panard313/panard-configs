{
    "git.ignoreLegacyWarning": true,
    "window.zoomLevel": 1,
    "editor.lineHeight": 20,
    "editor.fontSize": 16,
    "editor.fontFamily": "ubuntu mono",
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    //"editor.fontFamily": "'Monaco for Powerline','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    //"editor.fontFamily": "'Source Code Pro for Powerline','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    //vim settings
    //enable easymotion
    "vim.easymotion": true,
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "f",
                "o"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.open",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "q"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "w"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "after": [],
            "commands": [
                {
                    "command": "open-in-vim.open",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "after": [],
            "commands": [
                {
                    "command": "open-in-vim.open",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "cursorHome"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "commands": [
                "cursorEnd"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "m",
                "m",
            ],
            "commands": [
                "bookmarks.toggle"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "m",
                "n"
            ],
            "commands": [
                "bookmarks.jumpToNext"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "m",
                "p"
            ],
            "commands": [
                "bookmarks.jumpToPrevious"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "m",
                "l"
            ],
            "commands": [
                "bookmarks.list"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "m",
                "a"
            ],
            "commands": [
                "bookmarks.clear"
            ],
            "after": [
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "t"
            ],
            "commands": [
                "workbench.view.extension.outline"
            ],
            "after": [
            ]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Right>"
            ]
        },
        {
            "before": [
                "k",
                "j"
            ],
            "after": [
                "<Left>"
            ]
        }
    ],
    //open in vim settings
    "open-in-vim.openMethod": "linux.gnome-terminal",
    //"open-in-vim.linux.gnome-terminal.args": "--hide-menubar --full-screen"
    "open-in-vim.linux.gnome-terminal.args": "",
    "java.errors.incompleteClasspath.severity": "ignore",
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontFamily": "ubuntu mono",
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true,
        "suppressShowKeyBindingsNotice": true
    },
    "workbench.sideBar.location": "left",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/drivers/*/**": true,
        "**/*.o": true,
        "**/*.cmd": true,
        "**/*.map": true,
        "**/*.txt": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "jspm_packages": true,
        "node_modules": true,
        "**/**/node_modules": true,
        "**/drivers": true,
        "**/firmware": true,
        "**/net": true,
        "**/sound": true,
        "**/vmlinux*": true,
        "**/.zip": true,
        "**/.sh": true,
        "**/.idea": true,
        "**/*.o": true,
        "**/*.cmd": true,
        "**/*.map": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.idea": true,
        "**/*.o": true,
        "**/*.cmd": true,
        "**/*.map": true,
    },
    "debug.console.fontFamily": "ubuntu mono",
}
