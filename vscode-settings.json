{
    "git.ignoreLegacyWarning": true,
    "window.zoomLevel": 1,
    //"editor.lineHeight": 20,
    "//editor.fontSize": 13,
    "//editor.fontFamily": "'Monaco for Powerline','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    //"editor.fontFamily": "'Source Code Pro for Powerline','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    //vim settings
    //enable easymotion
    "vim.easymotion": true,
    "vim.leader": " ",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.quickOpen",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "o"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.open",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "q"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "w"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "after": [],
            "commands": [
                {
                    "command": "open-in-vim.open",
                    "args": []
                },
            ]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Right>"
            ]
        },
        {
            "before": [
                "k",
                "j"
            ],
            "after": [
                "<Right>"
            ]
        }
    ],
    //open in vim settings
    "//open-in-vim.openMethod": "linux.gnome-terminal",
    //"open-in-vim.linux.gnome-terminal.args": "--hide-menubar --full-screen"
    //"open-in-vim.linux.gnome-terminal.args": "",
    "java.errors.incompleteClasspath.severity": "ignore",
    "//terminal.integrated.lineHeight": 1.5,
    "//terminal.integrated.fontSize": 13,
}
